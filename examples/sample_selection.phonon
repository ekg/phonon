# Test sample selection syntax like bd:3, cp:1

# Default samples (index 0)
~default_bd: s "bd"
~default_cp: s "cp"

# Specific sample indices
~bd_sample_3: s "bd:3"
~bd_sample_5: s "bd:5"
~cp_sample_1: s "cp:1"

# Mix default and indexed samples
out: ~default_bd + ~bd_sample_3 + ~default_cp + ~cp_sample_1 >> mul 0.4