# Phonon Configuration
# This file is sourced by the phonon script

# Tempo in BPM (beats per minute)
# Default: 120 BPM
export BPM=120

# Time signature (beats per bar)
# Default: 4 (for 4/4 time)
export BEATS_PER_BAR=4

# Alternatively, set cycles per second directly
# (overrides BPM calculation if set)
# export CPS=0.5

# OSC port for communication with Fermion
# Default: 57120
# export OSC_PORT=57120

# Pattern file to load
# Default: patterns.phonon
# export PATTERN_FILE="patterns.phonon"